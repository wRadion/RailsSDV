<h1>Login</h1>

<%= form_with url: '/login', action: :post do |form| %>
  <% if flash[:error] %>
    <div style="color: red">
        <%= flash[:error] %>
    </div>
  <% end %>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :password, style: "display: block" %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "Login" %>
  </div>
<% end %>
